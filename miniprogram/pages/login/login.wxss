
.body {
    background-color: #fff;
    width: 90%;
    margin: 70rpx auto;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .body .item {
    display: flex;
    justify-content: space-between;
    width: 90%;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #d1d1d1;
    align-items: center;
    margin-top: 40rpx;
  }
  
  .body .item input {
    text-align: right;
  }
  
  .body button{
      margin-top: 50rpx;
      margin-bottom: 50rpx;
      background-color: #1067D1;
  }
