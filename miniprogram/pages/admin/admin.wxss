.body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .body .noneImg {
    width: 200rpx;
    height: 200rpx;
  }

  .body .apply {
    width: 85%;
    padding: 35rpx 25rpx;
    background-color: #fff;
    box-shadow: 0 0 20rpx #a1a1a1;
    margin: 0 auto;
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    border-radius: 20rpx;
  }

 .body .apply .top{
    display: flex;
    border-radius:10rpx ;
    align-items: center;
}


 .body .apply .top .avatar{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    background-color: #fff;
    border: 5rpx solid gray;
 }
 .body .apply .middle text{
    display: flex;
    flex-direction: column;
    padding: 5rpx;
    margin-left: 50rpx;
 }
 .body .apply .middle image{
    width: 100%; 
    height: 400rpx;
 }

  .body .apply .buttom {
    display: flex;
  }


  .body .apply .buttom .agree{
        width: 300rpx;
        background-color: rgba(78,253,116,.2);
        color: rgb(57, 253, 100);
  }

  .body .apply .buttom .refuse{
    width: 300rpx;
    background-color: rgba(255, 102,102, .2);
    color: rgb(255, 102, 102);
}